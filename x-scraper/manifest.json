{
    "manifest_version": 3,
    "name": "ùïè-Scraper",
    "version": "0.5.3",
    "description": "A browser extension to scrape ùïè/Twitter search results",
    "homepage_url": "https://fmoncomble.github.io/X-scraper/",
    "permissions": ["activeTab", "tabs", "webRequest", "cookies"],
    "host_permissions": ["*://x.com/*"],
    "content_scripts": [
        {
            "matches": ["*://twitter.com/*", "*://x.com/*"],
            "js": ["content.js", "xlsx.full.min.js"],
            "css": ["content.css"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "scripts": ["background.js"]
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon-32.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{04667ad6-ab44-44b4-a1a4-464491591fe4}",
            "update_url": "https://github.com/fmoncomble/X-scraper/releases/latest/download/update_manifest.json"
        }
    }
}
