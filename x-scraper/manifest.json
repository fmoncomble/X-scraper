{
    "manifest_version": 3,
    "name": "𝕏-Scraper",
    "version": "0.2",
    "description": "A Firefox extension to scrape 𝕏/Twitter search results",
    "homepage_url": "https://github.com/fmoncomble/X-Scraper",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "*://twitter.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["*://twitter.com/*"],
            "js": ["content.js"]
        }
    ],
    "icons": {
    	"48": "icons/icon-48.png",
    	"96": "icons/icon-96.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon-32.png"
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "{04667ad6-ab44-44b4-a1a4-464491591fe4}",
        "update_url": "https://github.com/fmoncomble/X-scraper/releases/latest/download/update_manifest.json"
      }
    }
}